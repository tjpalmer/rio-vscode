{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Rio",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#directives"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
          "name": "comment.line.rio",
          "begin": "//",
          "end": "$"
        },
				{
          "name": "comment.multiline.rio",
          "begin": "/\\*",
					"end": "\\*/",
					"patterns": [
						{
							"include": "#comments"
						}
					]
        }
			]
		},
		"directives": {
			"patterns": [
				{
					"name": "meta.preprocessor.rio",
					"match": "(?:#|@)\\w+\\b"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "constant.language.rio",
					"match": "\\b(false|NULL|true)\\b"
				},
				{
					"name": "keyword.control.rio",
					"match": "\\b(break|case|continue|default|do|else|if|for|goto|return|switch|while)\\b"
				},
				{
					"name": "keyword.decl.rio",
					"match": "\\b(const|enum|fn|import|let|mut|own|struct|typedef|union)\\b"
				},
				{
					"name": "meta.function.rio",
					"match": "\\b(alignof|offsetof|sizeof|typeof)\\b"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"include": "#strings-multi"
				},
				{
					"include": "#strings-single"
				}
			]
		},
		"strings-multi": {
			"patterns": [
				{
					"name": "string.quoted.triple.rio",
					"begin": "\"\"\"",
					"end": "\"\"\"",
					"patterns": [
						{
							"name": "constant.character.escape.rio",
							"match": "\\\\."
						},
						{
							"include": "#strings-single"
						}
					]
				}
			]
		},
		"strings-single": {
			"patterns": [
				{
					"name": "string.quoted.double.rio",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.rio",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "string.quoted.single.rio",
					"begin": "'",
					"end": "'",
					"patterns": [
						{
							"name": "constant.character.escape.rio",
							"match": "\\\\."
						}
					]
				}
			]
		}
	},
	"scopeName": "source.rio"
}